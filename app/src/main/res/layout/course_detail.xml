<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Course Code"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/backgroundColor"
            android:layout_marginRight="1dp"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="8dp"
            android:text="CHM 102"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"

            android:id="@+id/course_detail_code"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Course Title"
           android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:id="@+id/course_detail_title"
            android:layout_weight="3"
            android:text="Introduction to Chemistry II"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Prerequisite"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/backgroundColor"
            android:layout_marginRight="1dp"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="8dp"
            android:text="CHM 102"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"

            android:id="@+id/course_detail_prerequisite"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Type"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="Core Course"
            android:id="@+id/course_detail_type"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Unit"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@color/backgroundColor"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:text="5"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"
            android:id="@+id/course_detail_unit"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Semester"
            android:layout_marginRight="1dp"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="8dp"
            android:text="First"
            android:id="@+id/course_detail_semester"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:text="Part"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:text="100"
            android:id="@+id/course_detail_level"
            android:background="@color/backgroundColor"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>