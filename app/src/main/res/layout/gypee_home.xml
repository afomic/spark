<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/surface_margin"
                android:layout_margin="@dimen/surface_margin"
                android:orientation="vertical"
                android:background="@color/backgroundColor"
                android:elevation="@dimen/elevation_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Please select the Level to start from"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="100"
                        android:id="@+id/rb_level_hundred"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="200"
                        android:id="@+id/rb_level_two_hundred"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="300"
                        android:id="@+id/rb_level_three_hundred"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="400"
                        android:id="@+id/rb_level_four_hundred"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="500"
                        android:id="@+id/rb_level_five_hundred"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/surface_margin"
                android:background="@color/backgroundColor"
                android:elevation="@dimen/elevation_size"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/surface_margin"
                android:layout_marginRight="@dimen/surface_margin"
                android:layout_marginBottom="@dimen/surface_margin">
                <TextView
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="10dp"
                    android:text="Semester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="First"
                        android:id="@+id/rb_semester_first"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    S<RadioButton
                    android:text="Second"
                    android:id="@+id/rb_semester_second"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/test2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>




