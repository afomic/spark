<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ScrollView
       android:id="@+id/gypee_scrol"
       android:scrollbars="none"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:id="@+id/gypee_calculate_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:elevation="1dp"
               android:background="@color/backgroundColor"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/text_size"
                   android:layout_margin="@dimen/surface_margin"
                   android:paddingBottom="8dp"
                   android:text="select your course"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <GridLayout
                   android:layout_marginBottom="10dp"
                   android:columnCount="3"
                   android:id="@+id/my_grid"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:elevation="1dp"
               android:background="@color/backgroundColor"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <TextView
                   android:textColor="@color/textColor"
                   android:textSize="@dimen/text_size"
                   android:layout_margin="@dimen/surface_margin"
                   android:paddingBottom="8dp"
                   android:text="select the grade for each course"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <com.afomic.spark.util.NonScrollListView
                   android:padding="3dp"
                   android:layout_width="match_parent"
                   android:id="@+id/my_recycle"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
       </LinearLayout>
   </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/box"
            android:textColor="@color/backgroundColor"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:id="@+id/search_add_button"
            android:text="Add Course"
            android:layout_width="120dp"
            android:layout_height="36dp" />

    </LinearLayout>



</FrameLayout>
